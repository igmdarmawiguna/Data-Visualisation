{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Green Area per Capita (1990–2020)",
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},

  "params": [
    {
      "name": "year_slider",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 10,
        "name": "Year: "
      }
    }
  ],

  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
              "url": "https://raw.githubusercontent.com/tiadavies/Assignment_2/main/Green_areas_data.csv",
              "format": {"type": "csv"},
              "transform": [
                {
                  "filter": "datum.Measure == 'Green area per capita (m2/person)'"
                }
              ]
            }

      ,
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
            "key": "Country_name",
            "fields": ["Value", "Year"]
          }
        },
        {
          "filter": "datum.Year == year_slider"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "darkgray"},
      "encoding": {
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"scheme": "greens"},
          "title": "Green area per capita (m²/person)"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "title": "Green area per capita"}
        ]
      }
    }
  ]
}

