{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Life Expectancy (2015)",
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/tiadavies/3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
  {
    "name": "selectedYear",
    "value": 2015,
    "bind": {
      "input": "range",
      "min": 2000,
      "max": 2020,
      "step": 1
    }
  }
],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/life_year.csv"
        },
        "key": "Country",
        "fields": ["Life_Expectancy", "Year"],
        "transform" :[{"filter": "datum.Year == 2015"}] 
      }
      
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Life_Expectancy",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "title": "Life Expectancy (years)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Life_Expectancy", "type": "quantitative"}
    ]
  }
}
