{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Life Expectancy by Year",
  "width": 900,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "yearSelect",
      "value": 2015,         
      "bind": {
        "input": "select",
        "options": [2000, 2005, 2010, 2015, 2020],
        "labels": ["2000", "2005", "2010", "2015", "2020"],
        "name": "Choose Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/tiadavies/3179/refs/heads/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/life.csv"
        },
        "key": "Country",
        "fields": ["Life_Expectancy", "Year"]
      }
    },
    {
      "filter": "datum.Year == yearSelect" 
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Life_Expectancy",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "title": "Life Expectancy (years)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "ordinal"},
      {"field": "Life_Expectancy", "type": "quantitative"}
    ]
  }
}
